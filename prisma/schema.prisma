generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String    @id @default(uuid())
  email              String    @unique
  password           String
  firstName          String
  lastName           String
  coins              Int       @default(0)
  lastFreeCoinsClaim DateTime?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
}
